{
  "name": "fd2",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev:fd2": "vite --config modules/farm_fd2/vite.config.js",
    "dev:examples": "vite --config modules/farm_fd2_examples/vite.config.js",
    "dev:school": "vite --config modules/farm_fd2_school/vite.config.js",
    "build:fd2": "vite --config modules/farm_fd2/vite.config.js build",
    "build:examples": "vite --config modules/farm_fd2_examples/vite.config.js build",
    "build:school": "vite --config modules/farm_fd2_school/vite.config.js build",
    "watch:fd2": "vite --config modules/farm_fd2/vite.config.js build --watch",
    "watch:examples": "vite --config modules/farm_fd2_examples/vite.config.js build --watch",
    "watch:school": "vite --config modules/farm_fd2_school/vite.config.js build --watch",
    "preview:fd2": "vite --config modules/farm_fd2/vite.config.js preview",
    "preview:examples": "vite --config modules/farm_fd2_examples/vite.config.js preview",
    "preview:school": "vite --config modules/farm_fd2_school/vite.config.js preview",
    "eslint": "eslint --ext .vue,.js,.jsx,.cjs,.mjs,.json,.yml,.md .",
    "eslint:fix": "eslint --ext .vue,.js,.jsx,.cjs,.mjs,.json,.yml,.md --fix .",
    "bashlint": "shellcheck $(find . -path ./docker/db -prune -false -o -name '*.bash')",
    "spellcheck": "cspell --no-progress --no-summary -c .cspell.json .",
    "linkcheck": "markdown-link-check -q $(find . -path ./node_modules -prune -false -o -path ./docker/db -prune -false -o -name '*.md')",
    "lint": "npm run eslint; npm run bashlint; npm run spellcheck; npm run linkcheck",
    "format:all": "prettier --write --check '!./docker/db' --check '!./bin/templates/entrypoints/*.yml' .",
    "format:staged": "pretty-quick --write --staged ."
  },
  "dependencies": {
    "dayjs": "^1.11.8",
    "pinia": "^2.1.3",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.19.6",
    "@rushstack/eslint-patch": "^1.2.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-prettier": "^7.1.0",
    "cspell": "^6.31.2",
    "cypress": "^12.14.0",
    "eslint": "^8.39.0",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-md": "^1.0.19",
    "eslint-plugin-vue": "^9.11.0",
    "markdown-link-check": "^3.11.2",
    "prettier": "^2.8.8",
    "prettier-plugin-sh": "^0.12.8",
    "pretty-quick": "^3.1.3",
    "shellcheck": "^2.2.0",
    "start-server-and-test": "^2.0.0",
    "vite": "^4.3.9",
    "vite-plugin-static-copy": "^0.16.0"
  }
}
